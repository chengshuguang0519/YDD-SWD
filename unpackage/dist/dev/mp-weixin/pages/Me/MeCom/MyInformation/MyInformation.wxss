.information .information-top {
  width: 100%;
  height: 820rpx;
  padding: 36rpx 30rpx 0rpx 32rpx;
  border-top: 20rpx solid #F0F1F1;
}
.information .information-top .top-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1px solid #F0F1F1;
  padding-bottom: 18rpx;
  margin-bottom: 20rpx;
}
.information .information-top .top-item > text:nth-child(1) {
  font-size: 30rpx;
  color: #333333;
}
.information .information-top .top-item > view:nth-child(2) {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.information .information-top .top-item > view:nth-child(2) > image:nth-child(1) {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.information .information-top .top-item > view:nth-child(2) > image:nth-child(2) {
  width: 10rpx;
  height: 20rpx;
  margin-left: 24rpx;
}
.information .information-top .top-item .user-title {
  font-size: 30rpx;
  color: #333333;
}
.information .user-footer {
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #FF7C4C;
  border-radius: 15rpx;
  color: #fff;
  margin: 0 auto;
  margin-top: 220rpx;
}

