.all-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  width: 710rpx;
  margin: 22rpx auto 22rpx;
  border-radius: 15rpx;
  background-color: #fff;
  padding-bottom: 20rpx;
}
.all-item > view:nth-child(1) {
  text-align: right;
  margin-right: 18rpx;
  margin-top: 14rpx;
  font-size: 36rpx;
  color: #FF7C4C;
}
.all-item .item-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 38rpx;
}
.all-item .item-list > view:nth-child(1) {
  width: 168rpx;
  height: 168rpx;
  margin-left: 10rpx;
}
.all-item .item-list > view:nth-child(1) image {
  width: 168rpx;
  height: 168rpx;
}
.all-item .item-list > view:nth-child(2) {
  width: 310rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin-left: 30rpx;
}
.all-item .item-list > view:nth-child(2) > text:nth-child(1) {
  width: 310rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #333333;
}
.all-item .item-list > view:nth-child(2) > text:nth-child(2) {
  width: 310rpx;
  margin: 3rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #666666;
}
.all-item .item-list > view:nth-child(2) > text:nth-child(3) {
  font-size: 24rpx;
  color: #999;
}
.all-item .item-list > view:nth-child(3) {
  width: 175rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin: 0 0 120rpx 0rpx;
  text-align: center;
}
.all-item .item-list > view:nth-child(3) > text:nth-child(1) {
  font-size: 36rpx;
  margin-top: 8rpx;
  color: #333333;
}
.all-item .item-list > view:nth-child(3) > text:nth-child(2) {
  font-size: 30rpx;
  color: #999;
}
.all-item .item-price {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  margin-right: 14rpx;
  margin-bottom: 32rpx;
}
.all-item .item-price view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-right: 20rpx;
}
.all-item .item-price view > text:nth-child(1),
.all-item .item-price view > text:nth-child(2) {
  font-size: 24rpx;
  margin-right: 10rpx;
  color: #999;
}
.all-item .item-price view > text:nth-child(3) {
  font-size: 30rpx;
  color: #666;
}
.all-item .item-change {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.all-item .item-change text {
  width: 130rpx;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  border: 1px solid #666666;
  border-radius: 10rpx;
  color: #333333;
  margin-right: 14rpx;
}

